<%= div_for post do -%>
  <div class="row">
    <div class="col-md-8">
      <h2><%= link_to (h post.title), admin_post_path(post) -%></h2>
      <p><%=h post.body -%></p>
        <p>
          Comments(<%=h post.comments.count -%>)
        </p>
        <ul>
          <%= content_tag_for :li, post.tags do |tag|
            (h tag.name)
          end -%>
        </ul>
    </div>
    <div class="col-md-3">
      <%= link_to "Edit", edit_admin_post_path(post), class: "btn btn-primary" %>
      <%= link_to "Delete", admin_post_path(post), method: :delete, class: "btn btn-danger" %>
    </div>
  </div>


<% end -%>
